    "import requests\n",
    "from connection import ConnectionTask\n",
    "import json\n",
    "c=ConnectionTask()\n",
    "def order_status_compensation(order,keys):\n",
    "    for key in order:\n",
    "        mdb_data=c.pmdb.order_lite_list.find_one({'id':key},{'_id':0,'orderType':1})\n",
    "        order_url = \"https://blm.otosaas.com/api/order/v1/status?token=exciting&id={}&orderType={}\".format(key,mdb_data['orderType'])\n",
    "        headers = {\"Content-Type\": \"application/json\"}\n",
    "        data = {\"statuses\": ORDER_STATUS[keys],\n",
    "                \"opts\": {\"canCancel\": 0}}\n",
    "        resp = requests.put(url=order_url, data=json.dumps(data), headers=headers).json()\n",
    "        print(key,resp[\"code\"],end=';')"
   ]
